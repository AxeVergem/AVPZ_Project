@model Cash_Inspection.Models.Category
@using Cash_Inspection.Models;

@{
    ViewBag.Title = "Details";

}

<h2>@ViewBag.CategoryName</h2>
<h2>@ViewBag.ID</h2>

<div class="container">
    <div class="row">
        @*журнал*@
    
                <div class="col-md-6" style="overflow-y:scroll;max-height:22em">
                    <table class="table table-hover" >
                        <thead>
                            <tr>
                                <th>Имя</th>
                                <th>Средства</th>
                                <th>Комментарий</th>
                                <th>дата</th>
                            </tr>
                        </thead>
                        
                        @foreach (Subcategory item in Model.ListSubcategory)
                        {
                                <tbody >
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <th>@item.Comment</th>
                                        <td>@item.Date</td>
                                    </tr>
                                </tbody>                           
                        }
                     </table>
                </div>           
            @*статистика*@
            <div class="col-md-6">
                <div class="row">

                </div>
                <div class="row">
                    <a href="@Url.Action("Create", "Subcategories", new { id = ViewBag.ID })"><i class="material-icons">add</i></a>
                </div>
            </div>

        </div>
</div>

